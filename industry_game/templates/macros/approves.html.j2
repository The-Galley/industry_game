{% macro approves(apprvs) %}

<div class="row">
  <div class="col s12">
    <h3>Подтверждения</h3>
    <table class="highlight">
    <thead>
      <td>
        UUID
      </td>
      <td>
        Текст
      </td>
    </thead>
    {% for uuid, approve in apprvs.items() %}
    <tr>
      <td>
        {{ uuid }}
      </td>
      <td>
        {{ approve.message }}
      </td>
    </tr>

    {% endfor %}
    </table>
  </div>
</div>
<div class="row">
  <div class="card blue lighten-5">
  <div class="card-content black-text">
    <form>
    <span class="card-title">Форма подтверждения</span>
      <div class="row">

        <div class="input-field col s6">
          <input placeholder="UUID" id="approve_uuid" type="text" class="validate">
          <label for="approve_uuid">UUID</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input class="btn" id="submit_approve" type="submit" value="Подтвердить">
        </div>
      </div>
    </form>
  </div>
  </div>
</div>

{%- endmacro %}